{
    "parserOptions": {
        "ecmaVersion": 8 
    },
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "strict":[
            2,
            "function"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended"
}
